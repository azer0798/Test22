<!-- views/admin-dashboard.ejs -->
<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | وسيط DZ</title>
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Cairo', sans-serif;
      background: #f7fafc;
      color: #2d3748;
    }
    .admin-container {
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 280px;
      background: white;
      box-shadow: 2px 0 5px rgba(0,0,0,0.05);
      padding: 2rem 1.5rem;
    }
    .sidebar h2 {
      color: #667eea;
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }
    .sidebar ul {
      list-style: none;
    }
    .sidebar li {
      margin-bottom: 0.5rem;
    }
    .sidebar a {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      text-decoration: none;
      color: #4a5568;
      border-radius: 10px;
      transition: all 0.3s;
    }
    .sidebar a:hover, .sidebar a.active {
      background: #667eea;
      color: white;
    }
    .main-content {
      flex: 1;
      padding: 2rem;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      text-align: center;
    }
    .stat-number {
      font-size: 2.5rem;
      font-weight: 700;
      color: #667eea;
    }
    .recent-table {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      margin-bottom: 2rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 1rem;
      text-align: right;
      border-bottom: 1px solid #e2e8f0;
    }
    th {
      background: #f7fafc;
      font-weight: 600;
    }
    .badge {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
    }
    .badge-success { background: #c6f6d5; color: #22543d; }
    .badge-warning { background: #feebc8; color: #744210; }
    .badge-danger { background: #fed7d7; color: #742a2a; }
    .btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    .btn-primary { background: #667eea; color: white; }
    .alert {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <div class="sidebar">
      <h2>وسيط DZ</h2>
      <ul>
        <li><a href="/admin" class="active"><i class="fas fa-tachometer-alt"></i> لوحة التحكم</a></li>
        <li><a href="/admin/products"><i class="fas fa-gamepad"></i> المنتجات</a></li>
        <li><a href="/admin/orders"><i class="fas fa-shopping-cart"></i> الطلبات</a></li>
        <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</a></li>
      </ul>
    </div>
    
    <div class="main-content">
      <% if (success_msg) { %>
        <div class="alert" style="background: #c6f6d5; color: #22543d;"><%= success_msg %></div>
      <% } %>
      
      <h1 style="margin-bottom: 2rem;">لوحة التحكم</h1>
      
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number"><%= stats.products %></div>
          <div style="color: #718096;">إجمالي المنتجات</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.available %></div>
          <div style="color: #718096;">متاح</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.sold %></div>
          <div style="color: #718096;">تم البيع</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.orders %></div>
          <div style="color: #718096;">إجمالي الطلبات</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.pending %></div>
          <div style="color: #718096;">قيد الانتظار</div>
        </div>
      </div>
      
      <div class="recent-table">
        <h2 style="margin-bottom: 1rem;">أحدث الطلبات</h2>
        <table>
          <thead>
            <tr>
              <th>المنتج</th>
              <th>العميل</th>
              <th>السعر</th>
              <th>الحالة</th>
              <th>التاريخ</th>
            </tr>
          </thead>
          <tbody>
            <% recentOrders.forEach(order => { %>
              <tr>
                <td><%= order.product?.name || 'غير معروف' %></td>
                <td><%= order.customerName %></td>
                <td><%= order.product?.price?.toLocaleString() %> دج</td>
                <td>
                  <% if (order.status === 'pending') { %>
                    <span class="badge badge-warning">قيد الانتظار</span>
                  <% } else if (order.status === 'completed') { %>
                    <span class="badge badge-success">مكتمل</span>
                  <% } else { %>
                    <span class="badge badge-danger">ملغي</span>
                  <% } %>
                </td>
                <td><%= new Date(order.createdAt).toLocaleDateString('ar-DZ') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      
      <div class="recent-table">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
          <h2>أحدث المنتجات</h2>
          <a href="/admin/products/new" class="btn btn-primary">+ إضافة منتج</a>
        </div>
        <table>
          <thead>
            <tr>
              <th>المنتج</th>
              <th>السعر</th>
              <th>الحالة</th>
              <th>التاريخ</th>
            </tr>
          </thead>
          <tbody>
            <% recentProducts.forEach(product => { %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.price.toLocaleString() %> دج</td>
                <td>
                  <% if (product.status === 'available') { %>
                    <span class="badge badge-success">متاح</span>
                  <% } else if (product.status === 'pending') { %>
                    <span class="badge badge-warning">قيد الانتظار</span>
                  <% } else { %>
                    <span class="badge badge-danger">تم البيع</span>
                  <% } %>
                </td>
                <td><%= new Date(product.createdAt).toLocaleDateString('ar-DZ') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
